    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h2>Teste de Valor</h2>
<p>Usando o método <strong>contains(&nbsp;&nbsp;)</strong>, vamos testar se um valor possui determinado valor:</p>
{{#if refill}}
    <div class="card">
        <div class="card-body">
            <form action="/teste/form" method="post">
                <label for="valor" class="mb-2">Valor a ser testado:</label>
                <input type="text" name="valor" value="{{refill.valor}}" class="form-control mb-2">

                <label for="busca" class="mb-2">O que vai ser buscado:</label>
                <input type="text" name="busca" value="{{refill.busca}}" class="form-control mb-2">

                <button type="submit" class="btn btn-primary mt-4">Testar</button>
            </form>
        </div>
    </div>
{{else}}
    <div class="card">
        <div class="card-body">
            <form action="/teste/form" method="post">
                <label for="valor" class="mb-2">Valor a ser testado:</label>
                <input type="text" name="valor" class="form-control mb-2">

                <label for="busca" class="mb-2">O que vai ser buscado:</label>
                <input type="text" name="busca" class="form-control mb-2">

                <button type="submit" class="btn btn-primary mt-4">Testar</button>
            </form>
        </div>
    </div>
{{/if}}

{{#if resposta}}
    <h3 class="mt-4">Resultado:</h3>
        <div class="alert alert-success">{{resposta}}</div>
    </div>
{{else}}
    <p class="mt-4">Aguardando comparação...</p>
{{/if}}