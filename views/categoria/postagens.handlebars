<h1>{{categoria.nome}}</h1>
<hr>
{{#each postagens}}
    <div class="card mt-4 mb-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia mais</button></a>
            <hr>
            <small>{{data}}</small>
        </div>
    </div>
{{else}}
    <p class="mt-4 mb-4">Nenhuma postagem registrada nesta categoria</p>
{{/each}}