{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>
{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            slug: <strong>{{slug}}</strong>
            <br>
            <small>{{date}}</small>
            <br>
            <hr>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success btn-sm">Editar Categoria</button></a>
            <form action="/admin/categorias/deletar" method="post" class="form mt-2">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>Nenhuma categoria registrada</h4>
        </div>
    </div>
{{/each}}