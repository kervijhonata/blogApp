{{#each message}}
    <p class="alert alert-danger">{{message}}</p>
{{else}}
    {{!-- <p class="alert alert-primary">Nenhuma mensagem registrada</p> --}}
{{/each}}
<div class="card">
    <div class="card-body">
        <h1 class="text-center">FaÃ§a Login</h1>
        <hr>
        <form action="/usuarios/login" method="post">
            <div class="row mb-3">
                <label for="email" class="col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-10">
                <input type="email" name="email" class="form-control mb-2" minlength="5" maxlength="120" id="input-email-user_login" required>
                </div>
            </div>
            <div class="row mb-3">
                <label for="senha" class="col-sm-2 col-form-label">Senha:</label>
                <div class="col-sm-10">
                    <input type="password" name="senha" class="form-control mb-2" minlength="8" maxlength="30" id="input-password-user_login" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
    </div>
</div>